{
  "saveAndRun": {
    "commands": [
      {
        "cmd": "ocamlformat --profile janestreet --inplace ${file}",
        "match": ".ml"
      },
      {
        "cmd": "clear && esy test",
        "match": ".re"
      }
    ]
  },
  "code-runner.executorMapByFileExtension": {
    ".re": "esy x orwell"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/esy.lock": true
  }
}
